<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/putih"
              android:orientation="vertical"
              tools:context=".CreateFragment">


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_actionbar"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:titleTextColor="@color/putih"
            app:title="@string/calendar"
            android:fitsSystemWindows="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
            android:background="@color/Abu"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"/>

    <TextView
            android:text="Choose Date"
            android:textSize="14sp"
            android:textColor="@color/hitam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />

    <LinearLayout
            android:id="@+id/llChooseCalendar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/etEventDate"
                android:hint="Choose Date"
                android:textSize="16sp"
                android:inputType="datetime"
                android:textColorHint="@color/putihHint"
                android:textColor="@color/hitam"
                android:enabled="false"
                android:focusable="false"
                android:singleLine="true"
                android:maxLines="1"
                android:textColorHighlight="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        <ImageView
                android:id="@+id/ivChooseCalendar"
                android:src="@drawable/ic_today_black_24dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>


    <TextView
            android:text="Choose Date"
            android:textSize="14sp"
            android:textColor="@color/hitam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/etEventName"
            android:hint="Event Name"
            android:textSize="16sp"
            android:inputType="text"
            android:textColorHint="@color/putihHint"
            android:textColor="@color/hitam"
            android:singleLine="true"
            android:maxLines="1"
            android:textColorHighlight="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    <TextView
            android:id="@+id/tvCreateEvent"
            android:layout_gravity="end"
            android:text="@string/create"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/putih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</LinearLayout>